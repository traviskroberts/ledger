<h1>Update Account</h1>

<form action="/accounts/{{account.url}}" method="post" class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label for="account_name" class="required control-label">Name</label>
      <div class="controls">
        <input type="text" name="account_name" id="account_name" class="required span3" value="{{account.name}}" />
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a href="/accounts" class="btn">Cancel</a>
      </div>
    </div>
  </fieldset>
</form>
