<a href="/accounts" class="js-accounts">&larr; All Accounts</a>
&nbsp;|&nbsp;
<a href="/accounts/{{url}}/recurring" class="js-recurring-transactions">Recurring Transactions &rarr;</a>

<div class="row account-header">
  <div class="span8">
    <h1>{{name}}</h1>
  </div>

  <div class="span4">
    <div id="current-balance" class="balance pull-right" name="dollar_balance">{{dollar_balance}}</div>
  </div>
</div>

<div class="row">
  <div class="span9">
    <form class="form-inline new-entry">
      <label for="entry_fields" class="error hide entry-fields-error">Both fields are required.</label>
      <div class="input-prepend">
        <span class="add-on">$</span>
        <input type="text" name="entry_float_amount" id="entry_float_amount" class="span2 required" placeholder="Amount" autocapitalize="off">
      </div>
      <input type="text" name="entry_description" id="entry_description" class="span5 entry-description required" placeholder="Description" autocorrect="off" autocapitalize="words">
      <button type="submit" class="btn btn-primary js-new-entry" data-loading-text="adding...">Add</button>
    </form>
  </div>

  <form class="search-form span3">
    <input type="text" name="search" id="search" placeholder="Search" autocorrect="off">
    <button type="button" class="btn btn-link btn-clear"><i class="icon-remove"></i></button>
  </form>
</div>

<p class="edit-hint">Click on a row to edit.</p>

<table class="entries table table-bordered table-condensed table-striped">
  <tbody id="entries-list"></tbody>
</table>

{{#if totalRecords}}
  <div class="pagination-info pull-right">{{pagination_info currentPage pageSize totalRecords}}</div>
{{/if}}

<div class="pagination">
  <ul>
    {{#if previousPage}}
      <li class="prev previous_page">
        <a href="/accounts/{{url}}" data-page="{{previousPage}}" class="js-pagination">&larr; Previous</a>
      </li>
    {{else}}
      <li class="prev previous_page disabled">
        <a href="/accounts/{{url}}" class="js-pagination">&larr; Previous</a>
      </li>
    {{/if}}

    {{#if nextPage}}
      <li class="next next_page">
        <a href="/accounts/{{url}}" data-page="{{nextPage}}" class="js-pagination">Next &rarr;</a>
      </li>
    {{else}}
      <li class="next next_page disabled">
        <a href="/accounts/{{url}}" class="js-pagination">Next &rarr;</a>
      </li>
    {{/if}}
  </ul>
</div>
