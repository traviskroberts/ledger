<a href="/accounts/{{account.url}}/recurring">&larr; Back to Recurring Transactions</a>

<h1>Update Recurring Transaction</h1>

<form action="#" method="post" class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label for="float_amount" class="required control-label">Amount</label>
      <div class="controls">
        <input type="text" name="float_amount" id="float_amount" class="required span2" value="{{form_amount_value}}">
        <span class="help-inline"><label for="float_amount" class="error hide">This field is required.</label></span>
      </div>
    </div>

    <div class="control-group">
      <label for="day" class="required control-label">Day of the Month</label>
      <div class="controls">
        <select name="day" id="day" class="required span2">
          <option value=""></option>
          <option value="1"{{#option_selected 1 day}}{{/option_selected}}>1st</option>
          <option value="2"{{#option_selected 2 day}}{{/option_selected}}>2nd</option>
          <option value="3"{{#option_selected 3 day}}{{/option_selected}}>3rd</option>
          <option value="4"{{#option_selected 4 day}}{{/option_selected}}>4th</option>
          <option value="5"{{#option_selected 5 day}}{{/option_selected}}>5th</option>
          <option value="6"{{#option_selected 6 day}}{{/option_selected}}>6th</option>
          <option value="7"{{#option_selected 7 day}}{{/option_selected}}>7th</option>
          <option value="8"{{#option_selected 8 day}}{{/option_selected}}>8th</option>
          <option value="9"{{#option_selected 9 day}}{{/option_selected}}>9th</option>
          <option value="10"{{#option_selected 10 day}}{{/option_selected}}>10th</option>
          <option value="11"{{#option_selected 11 day}}{{/option_selected}}>11th</option>
          <option value="12"{{#option_selected 12 day}}{{/option_selected}}>12th</option>
          <option value="13"{{#option_selected 13 day}}{{/option_selected}}>13th</option>
          <option value="14"{{#option_selected 14 day}}{{/option_selected}}>14th</option>
          <option value="15"{{#option_selected 15 day}}{{/option_selected}}>15th</option>
          <option value="16"{{#option_selected 16 day}}{{/option_selected}}>16th</option>
          <option value="17"{{#option_selected 17 day}}{{/option_selected}}>17th</option>
          <option value="18"{{#option_selected 18 day}}{{/option_selected}}>18th</option>
          <option value="19"{{#option_selected 19 day}}{{/option_selected}}>19th</option>
          <option value="20"{{#option_selected 20 day}}{{/option_selected}}>20th</option>
          <option value="21"{{#option_selected 21 day}}{{/option_selected}}>21st</option>
          <option value="22"{{#option_selected 22 day}}{{/option_selected}}>22nd</option>
          <option value="23"{{#option_selected 23 day}}{{/option_selected}}>23rd</option>
          <option value="24"{{#option_selected 24 day}}{{/option_selected}}>24th</option>
          <option value="25"{{#option_selected 25 day}}{{/option_selected}}>25th</option>
          <option value="26"{{#option_selected 26 day}}{{/option_selected}}>26th</option>
          <option value="27"{{#option_selected 27 day}}{{/option_selected}}>27th</option>
          <option value="28"{{#option_selected 28 day}}{{/option_selected}}>28th</option>
          <option value="29"{{#option_selected 29 day}}{{/option_selected}}>29th</option>
          <option value="30"{{#option_selected 30 day}}{{/option_selected}}>30th</option>
          <option value="31"{{#option_selected 31 day}}{{/option_selected}}>31st</option>
        </select>
        <span class="help-inline"><label for="day" class="error hide">This field is required.</label></span>
      </div>
    </div>

    <div class="control-group">
      <label for="description" class="required control-label">Description</label>
      <div class="controls">
        <input type="text" name="description" id="description" class="span8" value="{{description}}">
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn btn-primary">Update</button>
        <button type="button" class="btn js-cancel">Cancel</button>
      </div>
    </div>
  </fieldset>
</form>
