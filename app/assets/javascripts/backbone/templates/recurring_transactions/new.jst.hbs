<h1>Schedule Recurring Transaction</h1>

<form action="#" method="post" class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label for="float_amount" class="required control-label">Amount</label>
      <div class="controls">
        <input type="text" name="float_amount" id="float_amount" class="required span2">
        <span class="help-inline"><label for="float_amount" class="error hide">This field is required.</label></span>
      </div>
    </div>

    <div class="control-group">
      <label for="day" class="required control-label">Day of the Month</label>
      <div class="controls">
        <select name="day" id="day" class="required span2">
          <option value=""></option>
          <option value="1">1st</option>
          <option value="2">2nd</option>
          <option value="3">3rd</option>
          <option value="4">4th</option>
          <option value="5">5th</option>
          <option value="6">6th</option>
          <option value="7">7th</option>
          <option value="8">8th</option>
          <option value="9">9th</option>
          <option value="10">10th</option>
          <option value="11">11th</option>
          <option value="12">12th</option>
          <option value="13">13th</option>
          <option value="14">14th</option>
          <option value="15">15th</option>
          <option value="16">16th</option>
          <option value="17">17th</option>
          <option value="18">18th</option>
          <option value="19">19th</option>
          <option value="20">20th</option>
          <option value="21">21st</option>
          <option value="22">22nd</option>
          <option value="23">23rd</option>
          <option value="24">24th</option>
          <option value="25">25th</option>
          <option value="26">26th</option>
          <option value="27">27th</option>
          <option value="28">28th</option>
          <option value="29">29th</option>
          <option value="30">30th</option>
          <option value="31">31st</option>
        </select>
        <span class="help-inline"><label for="day" class="error hide">This field is required.</label></span>
      </div>
    </div>

    <div class="control-group">
      <label for="description" class="required control-label">Description</label>
      <div class="controls">
        <input type="text" name="description" id="description" class="span8">
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn js-cancel">Cancel</button>
      </div>
    </div>
  </fieldset>
</form>
