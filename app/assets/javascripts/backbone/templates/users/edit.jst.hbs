<section class="span8 offset2">
  <form class="login-form">
    <h1>My Account</h1>

    <fieldset>
      <label for="user_name" class="required">Name</label>
      <input type="text" name="user_name" value="{{user.name}}" id="user_name" class="span4" />

      <label for="user_email" class="required">Email</label>
      <input type="email" name="user_email" value="{{user.email}}" id="user_email" class="span4 required" />

      <label for="user_password" class="required">Password</label>
      <input type="password" name="user_password" id="user_password" class="span4 required clearfix" />

      <label for="user_password_confirmation" class="required">Password (again)</label>
      <input type="password" name="user_password_confirmation" id="user_password_confirmation" class="span4 required clearfix" />
    </fieldset>

    <footer>
      <input type="submit" value="Update" class="btn btn-primary" />
    </footer>
  </form>
</section>
