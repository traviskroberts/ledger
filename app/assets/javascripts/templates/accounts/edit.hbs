<h1>Update Account</h1>

<form class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label {{bindAttr for="nameField.elementId"}} class="required control-label">Name</label>
      <div class="controls">
        {{view Ember.TextField valueBinding="name" name="name" viewName="nameField" class="required span3"}}
        <span class="help-inline"><label for="account_name" class="error hide">This field is required.</label></span>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <button {{action 'save'}} class="btn btn-primary">Save</button>
        <button {{action 'cancel'}} class="btn">Cancel</button>
      </div>
    </div>
  </fieldset>
</form>
