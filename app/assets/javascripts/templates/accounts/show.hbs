{{#linkTo "accounts"}}&larr; Back to Accounts{{/linkTo}}

{{#if content.isLoaded}}
  {{#with content}}
    <div class="row account-header">
      <div class="span8">
        <h1>{{name}}</h1>
      </div> <!-- /span8 -->

      <div class="span4">
        <div id="current-balance" class="balance pull-right">{{dollar_balance}}</div>
      </div> <!-- /span4 -->
    </div> <!-- /row -->

    <div class="row">
      <div class="span9">
        <form method="post" action="#" class="form-inline new-entry">
          <label for="entry_fields" class="error hide entry-fields-error">Both fields are required.</label>
          <div class="input-prepend">
            <span class="add-on">$</span>
            <input type="text" name="entry_float_amount" id="entry_float_amount" class="span2 required" placeholder="Amount" />
          </div>
          <input type="text" name="entry_description" id="entry_description" class="span5 entry-description required" placeholder="Description" />
          <input type="submit" value="Add" class="btn btn-primary" />
        </form>
      </div>

      <div class="recurring-link span3">
        <a href="/accounts/{{url}}/recurring">Recurring Transactions</a>
      </div>
    </div>

    {{#if entries.length}}
      <p class="edit-hint">Click on a row to edit.</p>
      <table class="entries table table-bordered table-condensed table-striped">
        <tbody id="entries-list">
          {{#each entry in this.entries}}
            {{entry}}
            <td>
              <a href="/accounts/{{../url}}/entries/{{id}}" class="pull-left delete-entry"><i class="icon-remove"></i></a>
              <div class="edit-entry" data-id="{{entry.id}}" data-field="description">{{entry.description}}</div>
            </td>
            <td class="date edit-entry" data-field="date">{{formatted_date}}</td>
            <td class="{{classification}} edit-entry" data-id="{{id}}" data-field="amount">{{formatted_amount}}</td>
          {{/each}}
        </tbody>
      </table>
    {{/if}}
  {{/with}}
{{else}}
  <p class="loading">Loading...</p>
{{/if}}


