<h1>Add Account</h1>

<%= form_for @account, :html => {:class => 'form-horizontal'} do |f| %>
  <fieldset>
    <%= render 'form', :f => f %>

    <div class="control-group">
      <%= f.label :initial_balance, 'Initial Balance (optional)', :class => 'control-label' %>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on">$</span>
          <%= f.text_field :initial_balance, :class => 'span2' -%>
        </div>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit 'Save', :class => 'btn btn-primary' %>
        <%= link_to 'Cancel', accounts_path, :class => 'btn' %>
      </div>
    </div>
  </fieldset>
<%- end -%>
