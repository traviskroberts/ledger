<!DOCTYPE html>
<html>
  <head>
    <title>Ledger</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag 'application', :media => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="body-wrap">
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>

            <%= link_to 'Ledger', root_path, :class => 'brand static' %>

            <div class="nav-collapse collapse">
              <ul class="nav">
                <%- if current_user -%>
                  <li><%= link_to 'Accounts', accounts_path %></li>
                <%- end -%>
              </ul>

              <%- if current_user -%>
                <ul class="nav pull-right">
                  <li><%= link_to "Logged in as #{current_user.email}", my_account_path, :class => 'static' %></li>
                  <li class="divider-vertical"></li>
                  <%- if current_user.super_admin? -%>
                    <li><%= link_to 'Users', users_path %></li>
                    <li class="divider-vertical"></li>
                  <%- end -%>
                  <li><%= link_to 'Logout', logout_path, :class => 'static', :method => :delete %></li>
                </ul>
              <%- else -%>
                <ul class="nav pull-right">
                  <li><%= link_to 'Login', login_path, :class => 'static' %></li>
                  <li class="divider-vertical"></li>
                  <li><%= link_to 'Register', register_path, :class => 'static' %></li>
                </ul>
              <%- end -%>
            </div> <!--/nav-collapse -->
          </div> <!-- /container -->
        </div> <!-- /navbar-inner -->
      </div> <!-- /navbar -->

      <div id="backbone-container" class="container main clearfix">
        <%= render 'shared/flash' %>
        <%= yield %>
      </div> <!-- /container -->

      <div class="footer-push"></div>
    </div> <!-- /body-wrap -->

    <footer>
      <div class="container">
        <!-- Footer? -->
      </div>
    </footer>

    <!-- <p id="screen-info"></p> -->
  </body>
</html>
