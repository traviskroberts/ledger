<!DOCTYPE html>
<html>
  <head>
    <title>Ledger</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag 'application', :media => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="body-wrap">
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>

            <a href="/" class="brand">Ledger</a>

            <div id="main-nav" class="nav-collapse collapse"></div>
          </div> <!-- /container -->
        </div> <!-- /navbar-inner -->
      </div> <!-- /navbar -->

      <div id="backbone-container" class="container main clearfix">
        <%= render 'shared/flash' %>
        <%= yield %>
      </div> <!-- /container -->

      <div class="footer-push"></div>
    </div> <!-- /body-wrap -->

    <footer>
      <div class="container">
        <!-- Footer? -->
      </div>
    </footer>

    <!-- <p id="screen-info"></p> -->
  </body>
</html>
