<%= link_to 'New Recurring Transaction', new_account_recurring_transaction_path(@account), :class => 'btn btn-primary btn-large pull-right' %>
<h1>Recurring Transactions</h1>

<%- if @recurring_transactions.present? -%>
  <table class="table table-condensed table-bordered table-striped">
    <thead>
      <tr>
        <th class="day">Day of the Month</th>
        <th class="amount">Amount</th>
        <th>Description</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <%- @recurring_transactions.each do |recurring_transaction| -%>
        <tr>
          <td><%= recurring_transaction.day.ordinalize %></td>
          <td class="<%= recurring_transaction.classification %>"><%= formatted_amount(recurring_transaction.dollar_amount, recurring_transaction.classification) %></td>
          <td><%= recurring_transaction.description %></td>
          <td>
            <%= link_to 'Edit', edit_account_recurring_transaction_path(@account, recurring_transaction), :class => 'btn btn-primary btn-mini' %>
            <%= link_to 'Delete', account_recurring_transaction_path(@account, recurring_transaction), :method => 'delete', :class => 'btn btn-danger btn-mini' %>
          </td>
        </tr>
      <%- end -%>
    </tbody>
  </table>
<%- else -%>
  <p>You don't have any recurring transactions recurring yet! Why not <%= link_to 'add one', new_account_recurring_transaction_path(@account) %> now?</p>
<%- end -%>
