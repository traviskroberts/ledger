<section class="span8 offset2">
  <%= form_for @user_session, :url => login_path, :html => {:class => 'login-form'} do |f| %>
    <h1>Log In</h1>

    <fieldset>
      <%= f.label :email, 'Email', :class => 'required' %>
      <%= f.email_field :email, :class => 'span4 required' %>

      <%= f.label :password, 'Password', :class => 'required' %>
      <%= f.password_field :password, :class => 'span4 required clearfix' %>

      <%= f.label :remember_me, :class => 'checkbox' do %>
        <%= f.check_box :remember_me %> Remember Me
      <%- end -%>
    </fieldset>

    <footer>
      <%= f.submit 'Log in', :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', root_path, :class => 'btn' %>
      <%= link_to 'Register', new_user_path %>
    </footer>
  <%- end -%>
</section>
